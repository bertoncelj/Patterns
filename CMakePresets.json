{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "basic",
      "displayName": "simple",
	  "hidden": true,
      "binaryDir": "${sourceDir}/Build",
      "cacheVariables": {
        "ENABLE_WARNINGS": "ON",
        "ENABLE_WARNINGS_AS_ERRORS": "OFF",
        "CREATE_DOXYGEN_DOC": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "MinGW-Debug",
      "inherits":"basic",
      "description": "Default build for MinGW compiler",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/Build_MinGW",
      "toolchainFile": "${sourceDir}/cmake/mingw-toolchain.cmake",
      "cacheVariables":{
        "CMAKE_BUILD_TYPE": "Debug",
        "MINGW_TOOLCHAIN_PATH": "C:/MinGW/bin/"
      }
    },
	{
      "name": "simulation",
      "inherits":"basic",
      "description": "win10 only ",
      "cacheVariables":{
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "basic"
    }
  ]
}
